{
  "name": "graphql-continuations",
  "version": "0.2.3",
  "description": "An alternative approach to @defer in resolving expensive GraphQL fields",
  "main": "./cjs/index.js",
  "scripts": {
    "clean": "rm -rf cjs && rm -rf mjs && rm -rf react && rm -rf {src,tests,client}/{**/*,*}.{d.ts,js}",
    "build": "pnpm clean && pnpm build:main && pnpm build:client",
    "build:main": "tsc -p tsconfig.lib.json && tsc -p tsconfig.lib.mjs.json",
    "build:client": "tsc -p tsconfig.client.json",
    "test": "vitest",
    "prepublish": "pnpm build",
    "coverage": "vitest run --coverage",
    "watch": "nodemon --exec \"spec-md > ./docs/index.html\" ./spec/spec.md"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./mjs/index.d.ts",
        "default": "./mjs/index.js"
      },
      "require": {
        "types": "./cjs/index.d.ts",
        "default": "./cjs/index.js"
      }
    },
    "./react": {
      "require": {
        "types": "./react/index.d.ts",
        "default": "./react/index.js"
      }
    }
  },
  "types": "./cjs/index.d.ts",
  "files": [
    "mjs/*",
    "react/*",
    "cjs/*"
  ],
  "keywords": [
    "graphql",
    "defer"
  ],
  "author": "Tim Griesser",
  "license": "MIT",
  "dependencies": {
    "uuid": "^9.0.0"
  },
  "peerDependencies": {
    "graphql": "*"
  },
  "devDependencies": {
    "@types/react": "^18.0.26",
    "@types/uuid": "^9.0.0",
    "graphql": "^16.6.0",
    "graphql-tag": "^2.12.6",
    "ioredis": "^5.2.4",
    "nodemon": "^2.0.20",
    "react": "^18.2.0",
    "react-router": "^6.5.0",
    "spec-md": "^3.0.2",
    "typescript": "^4.9.4",
    "vitest": "^0.25.7"
  }
}
